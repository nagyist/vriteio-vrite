{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
